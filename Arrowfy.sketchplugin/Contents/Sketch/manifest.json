{
    "name" : "Arrowfy",
    "description" : "Add simple arrowhead to either end of selected paths. Matches color and weight.",
    "author" : "Jocelyn Lin",
    "version" : "2.1",
    "compatibleVersion": "50",
    "identifier": "com.jocelynlin.sketch.arrowfy",
    "appcast": "https://github.com/joclin/arrowfy/blob/master/.appcast.xml",
    "commands": [
	{
	    "name" : "End arrow",
	    "identifier" : "create-arrow",
	    "shortcut" : "ctrl shift a",
	    "script" : "script.cocoascript",
	    "handler" : "createArrow"
	},
	{
	    "name" : "Beginning arrow",
	    "identifier" : "create-arrow-begin",
	    "script" : "script.cocoascript",
	    "handler" : "createArrowBegin"
	},
	{
	    "name" : "Both ends",
	    "identifier" : "create-arrow-bothends",
	    "script" : "script.cocoascript",
	    "handler" : "createArrowBothEnds"
	}

    ],    
    "menu" : {
	"title" : "Arrowfy",
	"items": [
	    "create-arrow",
	    "create-arrow-begin",
	    "create-arrow-bothends"
	]
    }
}
